<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<link href="../../estagio.css" rel="stylesheet" type="text/css"> 
<title>Instituição</title>
</head>

<body>

<div align="center">
<table border="1">
<tbody>

<tr>
<td>Instituição</td>
<td>{$instituicao}</td>
</tr>

<tr>
<td>Endereço</td>
<td>{$endereco}</td>
</tr>

<tr>
<td>CEP</td>
<td>{$cep}</td>
</tr>

<tr>
<td>Telefone</td>
<td>{$telefone}</td>
</tr>

<tr>
<td>Fax</td> 
<td>{$fax}</td>
</tr>

<tr>
<td>Benefícios</td> 
<td>{$beneficio}</td>
</tr>

<tr>
<td>Estágio no final de semana</td> 
{if $fim_de_semana eq 0}
<td>Não</td>
{elseif $fim_de_semana eq 1}
<td>Sim</td>
{elseif $fim_de_semana eq 2}
<td>Parcialmente</td>
{/if}
</tr>

<tr>
<td>Área</td> 
<td>{$area}</td>
</tr>

<tr>
<td>Turma</td>
<td>{$turma}</td>
</tr>

<tr class="rodape">
<td colspan="2" class="coluna_centralizada">
Supervisores
</td>
</tr>

{section name=elemento loop=$supervisores}
<tr>
<td>{$supervisores[elemento].cress}</td>
<td>{$supervisores[elemento].nome}</td>
</tr>
{/section}

<form name="modifica_instituicao" action="../atualizar/modifica.php?id_instituicao={$id}" method="post">
<tr class="rodape">
<td colspan="2" class="coluna_centralizada">
<input type="submit" name="submit" value="Modificar instituição">
</td>
</tr>
</form>

</tbody>
</table>
</div>

</body>

</html>